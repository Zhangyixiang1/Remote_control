<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353434"
    android:weightSum="1"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >


    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:weightSum="1">

        <ImageView
         android:id="@+id/imageView"
         android:layout_width="931dp"
         android:layout_height="514dp"
         android:adjustViewBounds="true"
         android:scaleType="fitXY"
         app:srcCompat="@drawable/site"
         android:layout_weight="0.26" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:scaleType="center"
                app:srcCompat="@drawable/hhlogo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="宏华电气"
                android:textAlignment="center"
                android:textColor="#F08519"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.39"
                android:text="2月26日"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="90sp" />

            <TextView
                android:id="@+id/textView_Day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="星期一"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/background_light"
                android:textSize="80sp" />

        </LinearLayout>
      </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="172dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="161dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IP"
                android:textColor="@android:color/background_light"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="端口"
                android:textColor="@android:color/background_light"
                android:textSize="80sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="777dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editText_IP"
                android:layout_width="739dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#0A373C"
                android:ems="10"
                android:inputType="none|textPersonName"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="192.168.0.1"
                android:textColor="@android:color/background_light"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/editText_Port"
                android:layout_width="742dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#0A373C"
                android:ems="10"
                android:inputType="none|textPersonName"
                android:selectAllOnFocus="false"
                android:singleLine="true"
                android:text="2000"
                android:textColor="@android:color/background_light"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_cnn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="#55ABEC"
                android:text="连接"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="50sp" />

            <Button
                android:id="@+id/btn_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="#55ABEC"
                android:text="退出"
                android:textColor="@android:color/background_light"
                android:textSize="50sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
